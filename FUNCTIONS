o	DATE FUNCTION :
mysql> SELECT CURRENT_DATE() AS today;
+------------+
| today      |
+------------+
| 2025-07-29 |
+------------+
1 row in set (0.00 sec)

mysql> SELECT NOW() AS current_datetime;
+---------------------+
| current_datetime    |
+---------------------+
| 2025-07-29 12:42:38 |
+---------------------+
1 row in set (0.00 sec)

mysql> SELECT CURDATE() AS today_date, CURTIME() AS now_time;
+------------+----------+
| today_date | now_time |
+------------+----------+
| 2025-07-29 | 12:43:44 |
+------------+----------+
1 row in set (0.00 sec)

mysql> SELECT DATE(NOW()) AS only_date;
+------------+
| only_date  |
+------------+
| 2025-07-29 |
+------------+
1 row in set (0.00 sec)

mysql> SELECT LAST_DAY(CURDATE()) AS last_day_of_month;
+-------------------+
| last_day_of_month |
+-------------------+
| 2025-07-31        |
+-------------------+
1 row in set (0.00 sec)

mysql> SELECT WEEKDAY('2025-07-29') AS weekday_number;
+----------------+
| weekday_number |
+----------------+
|              1 |
+----------------+
1 row in set (0.00 sec)

mysql> SELECT STR_TO_DATE('29-07-2025', '%d-%m-%Y') AS formatted_date;
+----------------+
| formatted_date |
+----------------+
| 2025-07-29     |
+----------------+
1 row in set (0.00 sec)
